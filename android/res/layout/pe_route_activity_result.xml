<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center|bottom"
             android:orientation="vertical"
             android:layout_gravity="bottom|center"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:id="@+id/group_result">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#aa3b3b3b"
                  android:orientation="vertical"
                  android:gravity="center|top"
                  android:layout_gravity="top|center">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center|top"
                      android:layout_gravity="top"
                      android:layout_alignParentTop="true">
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Average Speed: "/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:id="@+id/pe_route_activity_result_speed"
                    android:text="0.00"/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text=" KM/H"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center|top"
                      android:layout_gravity="top"
                      android:layout_alignParentTop="true">
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="   Total time: "/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:id="@+id/pe_route_activity_result_time"
                    android:text="0.00"/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text=" h"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center|top"
                      android:layout_gravity="top"
                      android:layout_alignParentTop="true">
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Total distance: "/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:id="@+id/pe_route_activity_result_distance"
                    android:text="0.00"/>
            <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text=" KM"/>
        </LinearLayout>
        <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:id="@+id/pe_route_activity_result_map"
                                             android:name="com.google.android.gms.maps.MapFragment"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"/>
    </LinearLayout>

</FrameLayout>